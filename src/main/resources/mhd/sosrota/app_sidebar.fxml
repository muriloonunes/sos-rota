<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mhd.sosrota.controller.SidebarController">
    <left>
        <VBox alignment="TOP_CENTER" spacing="15" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20"/>
            </padding>
            <HBox alignment="CENTER" spacing="10.0">
                <ImageView fitHeight="48.0" fitWidth="44.0" preserveRatio="true">
                    <Image url="@../../images/logo_colorida.png"/>
                </ImageView>
                <Label styleClass="sidebar-titulo" text="SOS-ROTA">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </HBox>
            <Separator/>
            <HBox fx:id="dashboardHbox" alignment="CENTER_LEFT" onMouseClicked="#handleDashboardClick"
                  styleClass="hbox-button">
                <padding>
                    <Insets left="10.0"/>
                </padding>

                <Button fx:id="dashboardButton" onAction="#handleDashboardClick" styleClass="nav-button"
                        text="Dashboard"/>
            </HBox>
            <HBox fx:id="ocorrenciasHbox" alignment="CENTER_LEFT" onMouseClicked="#handleOcorrenciasClick"
                  styleClass="hbox-button">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Button fx:id="ocorrenciasButton" onAction="#handleOcorrenciasClick" styleClass="nav-button"
                        text="Ocorrências"/>
            </HBox>
            <HBox fx:id="ambulanciasHbox" alignment="CENTER_LEFT" onMouseClicked="#handleAmbulanciasClick"
                  styleClass="hbox-button">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Button fx:id="ambulanciasButton" onAction="#handleAmbulanciasClick" styleClass="nav-button"
                        text="Gerenciar ambulâncias"/>
            </HBox>
            <HBox fx:id="equipesHbox" alignment="CENTER_LEFT" onMouseClicked="#handleProfissionaisClick"
                  styleClass="hbox-button">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Button fx:id="equipesButton" onAction="#handleProfissionaisClick" styleClass="nav-button"
                        text="Gerenciar equipes"/>
            </HBox>
            <HBox fx:id="relatoriosHbox" alignment="CENTER_LEFT" onMouseClicked="#handleRelatoriosClick"
                  styleClass="hbox-button">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Button fx:id="relatoriosButton" onAction="#handleRelatoriosClick" styleClass="nav-button"
                        text="Relatórios"/>
            </HBox>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox alignment="CENTER_LEFT">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Label fx:id="bemVindoLabel" style="-fx-cursor: default;" styleClass="nav-button" text="Bem vindo, "/>
            </HBox>
            <HBox fx:id="logoutHbox" alignment="CENTER" onMouseClicked="#handleLogout" styleClass="hbox-logout">
                <Button maxWidth="1.7976931348623157E308" onAction="#handleLogout" styleClass="logout-button"
                        text="Sair"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER"/>
    </center>
    <stylesheets>
        <URL value="@../../styles/global.css"/>
    </stylesheets>
</BorderPane>
