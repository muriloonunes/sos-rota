<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="mhd.sosrota.controller.ForgotPasswordController"
           stylesheets="src/main/resources/styles/global.css">

    <children>
        <VBox alignment="CENTER" spacing="16" maxWidth="360">
            <padding>
                <Insets top="32" right="32" bottom="32" left="32"/>
            </padding>

            <Label text="Redefinir Senha" styleClass="title-label"/>

            <Label fx:id="errorLabel"
                   textFill="red"
                   visible="false"
                   managed="false"
                   wrapText="true"/>

            <TextField fx:id="usernameField"
                       promptText="UsuÃ¡rio"
                       styleClass="input-field"/>

            <PasswordField fx:id="novaSenhaField"
                           promptText="Nova senha"
                           styleClass="input-field"/>

            <PasswordField fx:id="confirmarSenhaField"
                           promptText="Confirmar nova senha"
                           styleClass="input-field"/>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Voltar"
                        onAction="#handleVoltar"
                        styleClass="secondary-btn"/>

                <Button text="Salvar"
                        fx:id="salvarButton"
                        onAction="#handleSalvar"
                        styleClass="primary-btn"/>
            </HBox>
        </VBox>
    </children>
</StackPane>
