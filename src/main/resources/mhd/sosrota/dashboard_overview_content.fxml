<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>
    <styleClass>
        <String fx:value="main-content-area"/>
    </styleClass>
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
        <Text text="Dashboard Principal" styleClass="h1"/>
        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="10">
            <Label text="Bem-vindo(a), [Nome do Usuário]" styleClass="label-header-user"/>
            <ImageView fitHeight="30" fitWidth="30" pickOnBounds="true" preserveRatio="true">
<!--                <Image url="@../assets/user_icon.png"/>-->
            </ImageView>
        </HBox>
    </HBox>

    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
        </columnConstraints>

        <VBox styleClass="card-pane" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Text text="Ocorrências Abertas" styleClass="h3"/>
            <Text fx:id="openOccurrencesCount" text="15" styleClass="statistic-number"/>
            <Text text="Total aguardando despacho" styleClass="text-muted"/>
        </VBox>

        <VBox styleClass="card-pane" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Text text="Ambulâncias Disponíveis" styleClass="h3"/>
            <Text fx:id="availableAmbulancesCount" text="8" styleClass="statistic-number-success"/>
            <Text text="Prontas para atendimento" styleClass="text-muted"/>
        </VBox>

        <VBox styleClass="card-pane" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Text text="SLA Médio (Últimas 24h)" styleClass="h3"/>
            <Text fx:id="averageSLATime" text="12 min" styleClass="statistic-number"/>
            <Text text="Tempo médio de resposta" styleClass="text-muted"/>
        </VBox>
    </GridPane>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Text text="Ocorrências Ativas" styleClass="h2"/>
        <TableView fx:id="activeOccurrencesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn text="ID" prefWidth="50"/>
                <TableColumn text="Local" prefWidth="150"/>
                <TableColumn text="Gravidade" prefWidth="100"/>
                <TableColumn text="Status" prefWidth="120"/>
                <TableColumn text="Abertura" prefWidth="150"/>
                <TableColumn text="Ações" prefWidth="100"/>
            </columns>
            <placeholder>
                <Label text="Nenhuma ocorrência ativa no momento."/>
            </placeholder>
        </TableView>
    </VBox>
</VBox>