<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20" styleClass="main-content-area" stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mhd.sosrota.controller.EditarEquipeController">

    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <Label styleClass="vbox-container-titulo" text="Editar Equipe">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <Separator />

    <VBox spacing="10.0" styleClass="vbox-container">
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
        </padding>

        <VBox spacing="4">
            <Label styleClass="title-label" text="Ambulância:" />
            <ComboBox fx:id="ambulanciaComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione a ambulância" styleClass="info-selectors" />
        </VBox>

        <VBox spacing="4">
            <Label styleClass="title-label" text="Enfermeiro(a):" />
            <ComboBox fx:id="enfermeiroComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o enfermeiro" styleClass="info-selectors" />
        </VBox>

        <VBox spacing="4">
            <Label styleClass="title-label" text="Condutor:" />
            <ComboBox fx:id="condutorComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o condutor" styleClass="info-selectors" />
        </VBox>

        <VBox spacing="4">
            <Label styleClass="title-label" text="Médico:" />
         <HBox spacing="8.0">
            <children>
                  <ComboBox fx:id="medicoComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o médico" styleClass="info-selectors" HBox.hgrow="ALWAYS" />
               <Button mnemonicParsing="false" onAction="#handleLimparMedico" styleClass="remover-button" text="X" />
            </children>
         </HBox>
        </VBox>

        <HBox alignment="CENTER">
            <Label fx:id="erroLabel" styleClass="error-label" text="Erro!" />
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">

            <Button fx:id="cancelarButton" onAction="#handleCancelar" styleClass="btn-secondary" text="Cancelar">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button fx:id="deletarButton" onAction="#handleDeletar" styleClass="btn-ocorrencia" text="Deletar">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button fx:id="salvarButton" onAction="#handleSalvar" styleClass="btn-primary" text="Salvar alterações">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </VBox>
</VBox>
