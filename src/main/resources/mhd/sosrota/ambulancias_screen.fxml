<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20" styleClass="main-content-area" stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mhd.sosrota.controller.AmbulanciaController">

    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <VBox alignment="TOP_LEFT" spacing="10.0" styleClass="vbox-container">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label styleClass="vbox-container-titulo" text="Cadastro de Ambulâncias" />

        <Separator />
        <GridPane hgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox spacing="10.0">
                    <children>

                        <VBox spacing="4">
                            <Label styleClass="title-label" text="Placa:" />
                            <TextField fx:id="plateField" promptText="Ex: ABC1234" styleClass="input-field" />
                        </VBox>

                        <VBox spacing="4">
                            <Label styleClass="title-label" text="Tipo:" />
                            <ComboBox fx:id="typeComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o tipo (Básica/UTI)" styleClass="info-selectors" />
                        </VBox>
                    </children>
                </VBox>
                <VBox spacing="10.0" GridPane.columnIndex="1">
                    <children>

                        <VBox spacing="4">
                            <Label styleClass="title-label" text="Status Operacional:" />
                            <ComboBox fx:id="statusComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione o status" styleClass="info-selectors" />
                        </VBox>

                        <VBox spacing="4">
                            <Label styleClass="title-label" text="Base Vinculada:" />
                            <ComboBox fx:id="baseComboBox" maxWidth="1.7976931348623157E308" promptText="Selecione a base" styleClass="info-selectors" />
                        </VBox>
                    </children>
                </VBox>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="button-bar">
            <Button onAction="#handleClearFields" styleClass="btn-secondary" text="Limpar Campos">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button onAction="#handleRegisterAmbulance" styleClass="btn-primary" text="Registrar Ambulância">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </VBox>

    <VBox alignment="TOP_LEFT" spacing="10.0" styleClass="vbox-container" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label styleClass="vbox-container-titulo" text="Ambulâncias Cadastradas">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="refreshAmbulancesButton" styleClass="btn-secondary" text="Atualizar lista">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <VBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="ALWAYS">
            <TableView fx:id="ambulancesTableView" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="plateColumn" minWidth="-1.0" prefWidth="120.0" text="Placa" />
                    <TableColumn fx:id="typeColumn" minWidth="-1.0" prefWidth="160.0" text="Tipo" />
                    <TableColumn fx:id="statusColumn" prefWidth="160" text="Status Operacional" />
                    <TableColumn fx:id="baseColumn" prefWidth="200" text="Base Vinculada" />
                    <TableColumn fx:id="actionsColumn" prefWidth="160" text="Ações" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <Pagination fx:id="ambulancesPagination" maxPageIndicatorCount="10" prefHeight="40.0" VBox.vgrow="NEVER" />
        </VBox>
    </VBox>
</VBox>
