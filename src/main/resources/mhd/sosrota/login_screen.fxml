<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../../styles/login_screen.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mhd.sosrota.controller.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="400" spacing="15" styleClass="card-pane" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <Text styleClass="h1" text="SOS-Rota" />
            <Text styleClass="text-muted" text="Gestão de Atendimentos de Emergência" textAlignment="CENTER" wrappingWidth="300" />

            <VBox alignment="CENTER" prefWidth="Infinity" spacing="10">
                <Label styleClass="label" text="Usuário:" />
                <TextField fx:id="usernameField" promptText="Digite seu usuário" />
                <Label styleClass="label" text="Senha:" />
                <PasswordField fx:id="passwordField" promptText="Digite sua senha" styleClass="text-field" />
            </VBox>

            <Label fx:id="errorMessageLabel" alignment="CENTER" managed="false" maxWidth="Infinity" styleClass="error-label" text="Usuário ou senha inválidos." visible="false" />

            <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLoginButtonAction" styleClass="button-primary" text="Entrar" />
            <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegisterAction" styleClass="button-secondary" text="Cadastrar" />
            <Button fx:id="forgotPasswordButton" onAction="#handleForgotPasswordAction" styleClass="link-button" text="Esqueceu a senha?" />
        </VBox>
    </center>
</BorderPane>
