<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" styleClass="main-content-area" stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mhd.sosrota.controller.RelatoriosController">

    <content>
        <VBox alignment="TOP_LEFT" spacing="20" VBox.vgrow="ALWAYS">

            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <!-- ===========================
                 HISTÓRICO DE ATENDIMENTOS
            ============================ -->
            <VBox spacing="10" styleClass="vbox-container" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="16" left="16" right="16" top="16" />
                </padding>

                <!-- ===========================
                     TEMPO MÉDIO DE RESPOSTA
                ============================ -->
                <VBox spacing="6">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="title-label" text="Tempo médio de resposta:" />
                        <Button onAction="#handleTempoMedioResposta" styleClass="btn-secondary" text="Recalcular" />
                    </HBox>

                    <TextArea fx:id="txtTempoMedio" editable="false" prefHeight="150.0" prefRowCount="3" styleClass="text-area-report" wrapText="true" />
                </VBox>

                <!-- ===========================
                     OCORRÊNCIAS POR BAIRRO
                ============================ -->
                <VBox spacing="6">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="title-label" text="Mapa de ocorrências por bairro:" />
                        <Button onAction="#handleMapaBairros" styleClass="btn-secondary" text="Atualizar" />
                    </HBox>

                    <TextArea fx:id="txtMapaBairros" editable="false" prefHeight="200.0" prefRowCount="6" styleClass="text-area-report" wrapText="true" />
                </VBox>
            </VBox>

        </VBox>
    </content>
</ScrollPane>
